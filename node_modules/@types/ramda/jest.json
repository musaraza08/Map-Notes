{
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js", "json"],
  "testRegex": "/tests/.+\\.ts$",
  "transform": {"/tests/.+\\.ts$": "dts-jest/transform"},
  "moduleNameMapper": {
    "../ramda/dist": "<rootDir>/node_modules/ramda"
  },
  "globals": {
    "_dts_jest_": {
      "enclosing_declaration": true,
      "compiler_options": "./tsconfig.test.json"
    }
  },
  "reporters": [
    "default",
    "dts-jest/reporter"
  ]
}
